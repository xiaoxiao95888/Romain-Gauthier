
@{
    ViewBag.Title = "ImageDownload";
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/knockout")
@Scripts.Render("~/bundles/ImageDownload")
@Styles.Render("~/Content/ImageDownload")
<style>
    .wp-caption {
        background-color: #181717;
        border: medium none;
        border-radius: 3px;
        float: left;
        margin: 0 10px 10px 0;
        padding-top: 4px;
        text-align: center;
    }

    .wp-caption {
        max-width: 100% !important;
    }

        .wp-caption img {
            border: 0 none;
            margin: 0;
            max-width: 100%;
            padding: 0;
        }

        .wp-caption p.wp-caption-text {
            font-size: 12px;
            line-height: 20px;
            margin: 0;
            padding: 0 4px 5px;
            text-align: center;
        }

    h3 {
        line-height: 34px;
        border-bottom: 2px solid #181717;
        text-transform:Uppercase ;
        font-size:16px;
    }

    .nailthumb-container span.nailthumb-title {
        background: none repeat scroll 0 0 rgba(0, 125, 0, 0.5);
        font-size: 15px;
        height: 30px;
    }
                    .nailthumb-image-titles-bigger span.nailthumb-title {
                    background: none repeat scroll 0 0 rgba(0, 125, 0, 0.5);
                    font-size: 15px;
                    height: 30px;
                }
</style>
<div class="container-fluid">
    <div id="header-bar" data-position="fixed">
        <div id="logo">
            <a href="#" title="Romain Gauthier" rel="home"><img src="~/images/logo@2x.png" alt="Romain Gauthier" class="retina" id="logoImg" width="220" height="77"></a>
        </div>
    </div>
    <div style="height:100px;"></div>

    <table cellspacing="0" cellpadding="0" border="0" width="90%" style="margin-left:20px;color:#d1cdc9">
        <tbody data-bind="template: { name: 'ultemplate', foreach: viewModel.Items }"></tbody>
    </table>
    <script type="text/html" id="ultemplate">
        <tr>
            <td>
                <h3 data-bind="text:ProductTypeName">PRESTIGE HMS TEN</h3>
                <div data-bind="template: { name: 'body-template', foreach: Items }"></div>
            </td>
        </tr>
    </script>
    <script type="text/html" id="body-template">
        <div class="wp-caption nailthumb-container" style="width:130px">
           <img height="120" width="120" data-bind="attr:{src:ThumbnailUrl},click:ImageDownload.viewModel.Download" >
            <p class="wp-caption-text" data-bind="text:Name"></p>
        </div>
        
    </script>
</div>

