
@{
    ViewBag.Title = "Log";
}
@Styles.Render("~/Content/admin-log")
@Scripts.Render("~/bundles/admin-log")



<div class="row" style="padding-top: 25px;">
    <div class="panel panel-default">
        <div class="panel-heading">Log日志</div>
        <div class="panel-body">
            <div class="form-inline ">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-daterange input-group" id="datepicker">
                            <input type="text" class="input-sm form-control" name="start" data-bind="value:viewModel.SearchParm.FromDate" />
                            <span class="input-group-addon">to</span>
                            <input type="text" class="input-sm form-control" name="end" data-bind="value:viewModel.SearchParm.ToDate" />
                        </div>
                    </div>
                    <div class="form-group">
                        <a href="#" class="btn btn-primary" data-bind="click:viewModel.Load">Search</a>
                    </div>
                </div>

            </div>
        </div>
        <hr />
        <div class="panel-body">
            <p>用户登录Log</p>
        </div>
        <!-- Table -->
        <table class="table table-striped" data-bind="visible:viewModel.LoginLogItems().length!=0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>姓名</th>
                    <th>登录日期</th>
                </tr>
            </thead>
            <tbody data-bind="foreach:viewModel.LoginLogItems">
                <tr>
                    <td data-bind="text:$index"></td>
                    <td data-bind="text:PersonnelName"></td>
                    <td data-bind="date:Date"></td>
                </tr>
            </tbody>
        </table>
        <div class="panel-body">
            <p>培训主题Log</p>
        </div>
        <!-- Table -->
        <table class="table table-striped" data-bind="visible:viewModel.TrainLogItems().length!=0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>姓名</th>
                    <th>培训主题</th>
                    <th>浏览日期</th>
                </tr>
            </thead>
            <tbody data-bind="foreach:viewModel.TrainLogItems">
                <tr>
                    <td data-bind="text:$index"></td>
                    <td data-bind="text:PersonnelName"></td>
                    <td data-bind="text:TrainArticleTitle"></td>
                    <td data-bind="date:Date"></td>
                </tr>
            </tbody>
        </table>
        <div class="panel-body">
            <p>文件下载Log</p>
        </div>
        <!-- Table -->
        <table class="table table-striped" data-bind="visible:viewModel.FileDownLoadItems().length!=0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>姓名</th>
                    <th>文件名</th>
                    <th>所属产品</th>
                    <th>下载日期</th>
                </tr>
            </thead>
            <tbody data-bind="foreach:viewModel.FileDownLoadItems">
                <tr>
                    <td data-bind="text:$index"></td>
                    <td data-bind="text:PersonnelName"></td>
                    <td data-bind="text:FileName"></td>
                    <td data-bind="text:ProductTypeName"></td>
                    <td data-bind="date:Date"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

